import rospy
from sensor_msgs.msg import RegionOfInterest, Image
from hri_msgs.msg import IdsList


if __name__ == "__main__":

	rospy.init_node("sbd", anonymous=True)

	roi = RegionOfInterest()
	roi.x_offset = 0
	roi.y_offset = 0
	roi.width = 1279
	roi.height = 719

	ids_list = IdsList()
	ids_list.ids = ['debug']

	ids_pub = rospy.Publisher(
		'/humans/bodies/tracked', 
		IdsList, 
		queue_size=1)
	roi_pub = rospy.Publisher(
		'/humans/bodies/debug/roi', 
		RegionOfInterest, 
		queue_size=1)

	rate = rospy.Rate(10)

	while not rospy.is_shutdown():
		ids_pub.publish(ids_list)
		roi_pub.publish(roi)